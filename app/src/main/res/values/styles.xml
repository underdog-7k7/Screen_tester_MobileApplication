<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:padding">6sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:backgroundTint">#FDFBFB</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="my_button_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="mera_button">
        <item name="android:layout_width">69dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="mera_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>
</resources>